#include <iostream>
#include <string>
using namespace std;

class Person
{
public:
	int  age, height, id;
	string name;
public:
	string get_full()
	{
		string value2 = name + " Возраст: " + to_string(age) + " Рост: " + to_string(height) + " id: " + to_string(id);
		return value2;
	}

	string get_small()
	{
		string value = name + " " + " Возраст: " + to_string(age);
		return value;
	}
	string get_name()
	{
		return name;
	}
	void set_id(int i)
	{
		id = i;
	}

	void set_age(int a)
	{
		age = a;
	}

	void set_height(int h)
	{
		height = h;
	}

	void set_name(string n)
	{
		name = n;
	}

	void set_AI(string n, int a, int h, int i)
	{
		name = n;
		age = a;
		id = i;
		height = h;
	}
};

int main()
{
	setlocale(LC_ALL, "Russian");
	const int count = 7;
	int num, i, ans = 1, ans1 = 1, ans2, ans3;
	Person human[count];
	human[0].set_AI("NuN", 0, 0, 00000000);
	human[1].set_AI("Alexsandr", 20, 175, 11223344);
	human[2].set_AI("Oleg", 18, 190, 22235692);
	human[3].set_AI("Sergei", 28, 195, 24952123);
	human[4].set_AI("Olga", 18, 165, 13131313);
	human[5].set_AI("Alina", 19, 170, 14141414);
	human[6].set_AI("Nikita", 18, 177, 15151515);

	cout << "Узнать Полную или Краткую информацию о людях ? " << endl;
	cout << "1 - Краткая информация \n" << "2 - Полная информация \n";
	cin >> num;
	switch (num)
	{
	case 1:
	{
		cout << "Краткая информация: \n ";
		for (int i = 1; i < 7; i++)
			cout << human[i].get_small() << endl;
	}
	break;
	case 2:
	{
		cout << "Полная информация: \n";
		for (int i = 1; i < 7; i++)
			cout << human[i].get_full() << endl;
	}
	break;
	default:
		break;
	}
	while (ans1 != 0)
	{
		cout << "Хотите изменить информацию?" << endl;
		cout << "0 - No \n1 - Yes \n";
		cin >> ans1;
		if (ans1 == 1)
		{
			cout << "Введите номер человека \n";
			cin >> ans2;
			cout << "Что вы хотите изменить? \n";
			cout << "1 - Имя \n2 - Возраст \n3 - Рост \n4 - id " << endl;
			cin >> ans3;
			switch (ans3)
			{
			case 1:
			{
				string newName = "NuN";
				cout << "Введите новое имя: ";
				cin >> newName;
				human[ans2].set_name(newName);
			}
			break;
			case 2:
			{
				int newAge = 0;
				cout << "Введите новый возраст: ";
				cin >> newAge;
				human[ans2].set_age(newAge);
			}
			break;
			case 3:
			{
				int newHeight = 0;
				cout << "Введите новый рост: ";
				cin >> newHeight;
				human[ans2].set_height(newHeight);
			}
			break;
			case 4:
			{
				int newId = 00000000;
				cout << "Введите новое id: ";
				cin >> newId;
				human[ans2].set_id(newId);
			}
			break;
			}
			cout << human[ans2].get_full() << endl;
		}

	}
	system("pause");
	return 0;
}
