#include <iostream>
using namespace std;

int main()
{
	setlocale(LC_ALL, "RUS");
	int input;

	cout << "1 Доллар США\n";
	cout << "2. Евро\n";
	cout << "3. Российский рубль\n";
	cout << "4. Австралийский доллар\n";
	cout << "5. Азербайджанский манат\n";
	cout << "6. Албанский лек\n";
	cout << "Selection: ";
	cin >> input;
	switch (input) {
	case 1:
		cout << "\n"
			"Доллар США (обозначают знаком $ или USD) – национальная валюта Соединенных Штатов Америки. \n";
		break;
	case 2:
		cout << "\n"
			"Евро (обозначают знаком €,или EUR) – официальная единая валюта Евросоюза. \n";
		break;
	case 3:
		cout << "\n"
			"Российский рубль (обозначается знаком RUB и символом ₽) – национальная валюта Российской Федерации. \n";
		break;
	case 4:
		cout << "\n"
			"Гривны – это денежная еденица Украины. \n";
		break;
	case 5:
		cout << "\n"
			"Фунты – это денежная единица, являющаяся национальной валютой Великобритани. \n";
		break;
	case 6:
		cout << "\n"
			"Иена – это денежная единица Японии. \n";
		break;
	default:
		cout << "Нет такой валюты\n";
		break;
	}
	cin >> input;
	//cin.get();
}
